# Uncomment this line to define a global platform for your project
source 'https://github.com/CocoaPods/Specs.git'
platform :ios, '8.2'
inhibit_all_warnings!

def common_pods
	pod 'Parse'
	pod 'JGProgressHUD', :git => 'https://github.com/JonasGessner/JGProgressHUD.git'
	pod 'GBVersionTracking'
	pod 'AFViewShaker'
end

target 'lit-ios' do
	common_pods
	pod 'ParseFacebookUtilsV4'
	pod 'ParseTwitterUtils'
	pod 'SCRecorder'
	pod 'MDRadialProgress'
	pod 'UITextView+Placeholder'
	pod 'EZAudio', :git => 'https://github.com/ale0xB/EZAudio.git'
	pod 'VOXHistogramView', :git => 'https://github.com/ale0xB/VOXHistogramView.git'
	pod 'DateTools'
	pod 'CRGradientNavigationBar', :git => 'https://github.com/Serjip/CRGradientNavigationBar.git'
	pod 'HMSegmentedControl'
	pod 'ZLSinusWaveView', :git => 'https://github.com/ale0xB/ZLSinusWaveView.git'
	pod 'NgEmojiMap'
	pod 'RSKImageCropper'
	pod 'DownloadButton'
	pod "MMMaterialDesignSpinner"
	pod 'MSSlidingPanelController'
	pod 'JGActionSheet', :git => 'https://github.com/ale0xB/JGActionSheet.git'
	pod 'Reachability', '~> 3.2'
	pod 'FBSDKShareKit'
	pod 'DMActivityInstagram', '0.0.3'
	pod 'ABOnboarding', :git => 'https://github.com/ale0xB/ABOnboarding.git'
	pod 'ParseUI'
	pod 'Mixpanel'
	pod 'JVFloatLabeledTextField'
end


target 'LITKeyboard' do
	common_pods
	pod 'Mixpanel/AppExtension'
    	pod 'Reachability', '~> 3.2'
end

